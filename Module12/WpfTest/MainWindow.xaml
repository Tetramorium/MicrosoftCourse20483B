        <TextBox x:Name="tb_NameSpace_Copy1" HorizontalAlignment="Left" Height="23" Margin="10,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBox x:Name="tb_NameSpace_Copy2" HorizontalAlignment="Left" Height="23" Margin="10,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="33,43,0,0" VerticalAlignment="Top"/>
        <Button x:Name="bt_Generate" Content="Generate" Grid.Column="1" HorizontalAlignment="Left" Margin="239,133,0,0" VerticalAlignment="Top" Width="75" Click="bt_Generate_Click"/>

    </Grid>
</Window>
